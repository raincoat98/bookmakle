{
  "manifest_version": 3,
  "name": "북마클",
  "version": "1.0",
  "description": "__MSG_appDescription__",
  "default_locale": "ko",
  "permissions": [
    "storage",
    "offscreen",
    "cookies",
    "tabs",
    "activeTab",
    "clipboardWrite",
    "contextMenus",
    "scripting"
  ],
  "host_permissions": [
    "https://*.firebaseapp.com/*",
    "https://bookmarkhub-5ea6c.web.app/*",
    "https://*.googleapis.com/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_title": "북마클 - 빠른 북마크 저장"
  },
  "web_accessible_resources": [
    {
      "resources": ["offscreen.html", "offscreen.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "bookmark.png",
    "32": "bookmark.png",
    "48": "bookmark.png",
    "128": "bookmark.png"
  }
}
